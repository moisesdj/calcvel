<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cetis138gmail.moises.calcvelocidad.calc">

    <TextView
        android:id="@+id/nada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scrollbarSize="40dp"
        android:text="AGREGAR VALORES"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nada"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:text="ACELERACIÓN"
        android:textAppearance="@style/TextAppearance.AppCompat.Button" />

    <EditText
        android:id="@+id/campot"
        android:layout_width="85dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="15dp"
        android:hint="tiempo"
        android:inputType="numberDecimal"
        android:maxLength="6"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/campov"
        android:layout_width="85dp"
        android:layout_height="45dp"
        android:layout_alignBaseline="@+id/campot"
        android:layout_alignBottom="@+id/campot"
        android:layout_centerHorizontal="true"
        android:hint="velocidad"
        android:inputType="numberDecimal"
        android:maxLength="6"
        android:singleLine="true" />

    <EditText
        android:id="@+id/campop"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_alignBaseline="@+id/campov"
        android:layout_alignBottom="@+id/campov"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:hint="posición"
        android:inputType="numberDecimal"
        android:maxLength="6"
        android:singleLine="true" />

    <Button
        android:id="@+id/ver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="VER"/>

    <Button
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="CLEAR"

        />

    <Button
        android:id="@+id/enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="ACEPTAR"/>

    <EditText
        android:id="@+id/campot2"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_above="@+id/enter"
        android:layout_alignEnd="@+id/exit"
        android:layout_alignRight="@+id/exit"
        android:hint="m/s\u00b2"
        android:inputType="numberDecimal"
        android:maxLength="6"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/campov2"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_above="@+id/enter"
        android:layout_alignLeft="@+id/campov"
        android:layout_alignStart="@+id/campov"
        android:hint="velocidadx"
        android:inputType="numberDecimal"
        android:maxLength="6"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/campop2"
        android:layout_width="85dp"
        android:layout_height="45dp"
        android:layout_alignBottom="@+id/campov2"
        android:layout_alignLeft="@+id/ver"
        android:layout_alignStart="@+id/ver"
        android:layout_alignTop="@+id/campov2"
        android:hint="posiciónx"
        android:inputType="numberDecimal"
        android:maxLength="6"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/rcampop2"
        android:layout_width="85dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/campop2"
        android:layout_alignStart="@+id/campop2"
        android:layout_below="@+id/enter"
        android:text="posiciony"/>

    <TextView
        android:id="@+id/rcampov2"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_alignBottom="@+id/rcampop2"
        android:layout_alignLeft="@+id/campov2"
        android:layout_alignStart="@+id/campov2"
        android:text="velocidady"/>

    <TextView
        android:id="@+id/rcampot2"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_alignBottom="@+id/rcampov2"
        android:layout_alignLeft="@+id/campot2"
        android:layout_alignStart="@+id/campot2"
        android:text="tiempoy"/>
</RelativeLayout>
